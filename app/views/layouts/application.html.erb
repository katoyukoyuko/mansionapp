<!DOCTYPE html>
<html>
  <head>
    <title>Mansionapp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if user_signed_in? %>
      <%= link_to t('view.user.mypage'), user_path %>
      <%= link_to t('view.admin.admin'), "/admin" if @user.role != "user" %>
      <%= link_to t('view.session.logout'), destroy_user_session_path, method: :delete %>
    <% else %>
      <%= link_to t('view.session.signin'), new_user_registration_path %>
      <%= link_to t('view.session.login'), new_user_session_path %>
    <% end %>

    <% if notice %>
      <p class="alert alert-notice"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-error"><%= alert %></p>
    <% end %>
    <%= yield %>
  </body>
</html>
